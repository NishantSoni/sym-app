{{ include('Frontend/layout/fos_header.html.twig') }}


{% trans_default_domain 'FOSUserBundle' %}

<div class="card card-login mx-auto mt-5">
      <div class="card-header">Login</div>
      <div class="card-body">

        {% if error %}
            <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post">

            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

          <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input class="form-control" type="text" id="username" aria-describedby="emailHelp" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="Enter email"/>
          </div>
          <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Enter Password"/></p>
          </div>
          <div class="form-group">
            <div class="form-check">
                <label class="form-check-label" for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"  class="form-check-input"/>{{ 'security.login.remember_me'|trans }}
                </lable>
            </div>
          </div>
          <input type="submit" class="btn btn-primary btn-block" value="Login" />
        </form>
        <div class="text-center">
          <a class="d-block small mt-3" href="/register">Register an Account</a>
          <a class="d-block small" href="/resetting/request">Forgot Password?</a>
        </div>
      </div>
    </div>

{{ include('Frontend/layout/fos_footer.html.twig') }}