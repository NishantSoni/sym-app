{{ include('Frontend/layout/header.html.twig') }}
	
	<table class="table table-hover" style="margin-top:5px;">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Category</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    
    {% for post in posts %}
	    
	    <tr class="table-secondary">
	      	<td>{{ post.id }}</td>
	      	<td>{{ post.title }}</td>
	      	<td>{{ post.description }}</td>
	      	<td>{{ post.category }}</td>
	      	<td>
				<a href="/post/view/{{ post.id }}"><span class="badge badge-pill badge-warning">View</span></a>
	      		<a href="/post/update/{{ post.id }}"><span class="badge badge-pill badge-info">Update</span></a>
	      		<a href="/post/delete/{{ post.id }}"><span class="badge badge-pill badge-danger">Delete</span></a>
			</td>
	    </tr>

	{% else %}

		<div class="alert alert-dismissible alert-warning">
		  	<h4 class="alert-heading">Oops !!</h4>
		  	<p class="mb-0">Records are not found in the database...!!</p>
		</div>

	{% endfor %}

    
  </tbody>
</table> 

{{ include('Frontend/layout/footer.html.twig') }}