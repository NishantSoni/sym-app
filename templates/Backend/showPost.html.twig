{{ include('Backend/layout/header.html.twig') }}
{{ include('Backend/layout/flash.html.twig') }}

	<div class="container-fluid">
		
		<ol class="breadcrumb">
			<li class="breadcrumb-item">
				All Posts :
			</li>
		</ol>

		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
					<th>ID</th>
					<th>Title</th>
					<th>Description</th>
					<th>Category</th>
					<th>Action</th>
					</tr>
				</thead>
				
				<tbody>
					
					{% for post in posts %}
					
						<tr>
							<td>{{ post.id }}</td>
							<td>{{ post.title }}</td>
							<td>{{ post.description }}</td>
							<td>{{ post.category }}</td>
							<td>
								<a href="/admin/post/view/{{ post.id }}"><span class="badge badge-pill badge-warning">View</span></a>
								<a href="/admin/post/delete/{{ post.id }}"><span class="badge badge-pill badge-danger">Delete</span></a>
							</td>
						</tr>

					{% else %}

						<div class="alert alert-dismissible alert-warning">
							<h4 class="alert-heading">Oops !!</h4>
							<p class="mb-0">Records are not found in the database...!!</p>
						</div>

					{% endfor %}

				</tbody>
			</table> 
		</div>
	
	</div>
{{ include('Backend/layout/footer.html.twig') }}