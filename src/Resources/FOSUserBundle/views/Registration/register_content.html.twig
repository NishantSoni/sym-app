{% trans_default_domain 'FOSUserBundle' %}


<div class="card text-white bg-secondary mb-3" style="max-width: 20rem;">
  <div class="card-header list-group-item list-group-item-action active" style="text-align:center;"><h3 class="text-info">SIGN IN</h3></div>
  <div class="card-body" style="text-align:center;">
        
        <form action="{{ path("fos_user_registration_register") }}" method="post">
            
            <div class="form-group">
                <p class="card-text text-info"><label for="fos_user_registration_form_email" class="required">Email</label>
                <input type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" required="required" /></p>
            </div>

            <div class="form-group">
                <p class="card-text text-info text-info"><label for="fos_user_registration_form_username" class="required">Username</label>
                <input type="text" id="fos_user_registration_form_username" name="fos_user_registration_form[username]" required="required" maxlength="180" pattern=".{2,}" /></p>
            </div>

            <div class="form-group">
                <p class="card-text text-info text-info"><label for="fos_user_registration_form_plainPassword_first" class="required">Password</label>
                <input type="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" required="required" autocomplete="new-password" /></p>
            </div>

            <div class="form-group">
                <p class="card-text text-info text-info"><label for="fos_user_registration_form_plainPassword_second" class="required">Repeat password</label>
                <input type="password" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" required="required" autocomplete="new-password" /></p>
            </div>

            {{ form_row(form._token) }}

            <p class="card-text">
                <input class="btn btn-info badge-info" type="submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans }}" />
            </p>

        </form>

        <p>
            <div class="list-group">
                <small class="text-muted">Already registered ? click here to <a href="/login" class="text-info">SIGN-IN</a></small>
            </div>
        </p>
    </div>
</div> 
