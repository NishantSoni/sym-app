{{ include('Frontend/layout/fos_header.html.twig') }}

{% trans_default_domain 'FOSUserBundle' %}

<div class="card card-register mx-auto mt-5">
      <div class="card-header">Register an Account</div>
      <div class="card-body">

        <div class="text-danger">{{ form_errors(form.username) }}</div>
        <div class="text-danger">{{ form_errors(form.email) }}</div>
        <div class="text-danger">{{ form_errors(form.plainPassword.first) }}</div>
        
        <form action="{{ path("fos_user_registration_register") }}" method="post" class="fos_user_registration_register">

            <div id="fos_user_registration_form">
            <div class="form-group">
                <label for="fos_user_registration_form_email" class="required">Email</label>
                    <input class="form-control" type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" required="required" placeholder="Enter Email"/>
            </div>  

            <div class="form-group">  
                <label for="fos_user_registration_form_username" class="required">Username</label>
                <input class="form-control" type="text" id="fos_user_registration_form_username" name="fos_user_registration_form[username]" required="required" maxlength="180" pattern=".{2,}" placeholder="Enter Username"/>
              
            </div>

            <div class="form-group">
                <label for="fos_user_registration_form_plainPassword_first" class="required">Password</label>
                <input class="form-control" type="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" required="required" autocomplete="new-password" placeholder="Enter Password"/>
            </div>

            <div class="form-group">
                <label for="fos_user_registration_form_plainPassword_second" class="required">Repeat password</label>
                <input class="form-control" type="password" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" required="required" autocomplete="new-password" placeholder="Enter password again"/>
            </div>

            {{ form_row(form._token) }}

            <input class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans }}" />
            </div>
        </form>
        
      </div>

      <div class="card-footer text-center">
            Already have an account ? <a href="/login">Login Here</a>
            <br>
            Forgot password ? <a href="/resetting/request">Reset Here</a>
        </div>
    </div>

    {{ include('Frontend/layout/fos_footer.html.twig') }}